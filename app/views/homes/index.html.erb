
<div id="app">
  <ul>
    <div v-for="fruit in fruits" :key="fruit">
      <p>{{fruit}}</p>
      <input type="text">
    </div>
  </ul>
  <button @click="remove">先頭を削除</button>
</div>

<script>
  new Vue({
    el: '#app',
    data: {
    fruits: ['りんご', 'ブドウ', 'バナナ']
    },
    methods: {
      remove: function() {
        this.fruits.shift()
      }
    }
  })
</script>


