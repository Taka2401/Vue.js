
<div id="app">
  <h1 :class="classObject">hello</h1>
  <button @click="isActive = !isActive">切り替え</button>

  <h1 :class="[{red: isActive}, bg]">hello</h1>
</div>


<script>
  new Vue({
    el: '#app',
    data: {
      isActive: true,
      color: 'red',
      bg: 'bg-blue'
    },
    computed: {
      classObject: function() {
        return {
          red: this.isActive,
          'bg-blue': !this.isActive
        }
      }
    }
  })
</script>

<style>
  .red {
    color: red;
  }

  .bg-blue {
    background: blue;
  }
</style>





